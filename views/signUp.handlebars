
<main>

  <div class="signup-container">
    <form action="/signup" method="post">
      <div>
        <div class="fields">

          <div class="field">
            <label>First name</label>
            <input name="first_name" type="text" required="required" placeholder="First Name">
          </div>

          <div class="field">
            <label>Last name</label>
            <input name="last_name" type="text" required="required" placeholder="Last Name">
          </div>

        </div>

          <div class="field">
            <label>E-mail</label>
            <input name="email" type="text" required="required" placeholder="E-mail">
          </div>

          <div class="field">
            <label>Password</label>
            <input name="password" type="password" required="required" placeholder="Password">
          </div>

          <div class="field">
            <label>City</label>
            <input name="city" type="text" required="required" placeholder="City">
          </div>

          <div class="field">
            <label>State</label>
            <input name="state" type="text" required="required" placeholder="State">
          </div>

        <button type="submit">Submit</button>
      </div>
    </form>
  </div>

  <h1> Current Users: </h1>

  <table>
    <thead>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>E-mail</th>
      <th>City</th>
      <th>State</th>

    </thead>
    <tbody>
      {{#each getUsers}}
      <tr>
          <td>{{userID}}</td>
          <td>{{user_fname}}</td>
          <td>{{user_lname}}</td>
          <td>{{userEmail}}</td>
          <td>{{userCity}}</td>
          <td>{{userState}}</td>

          <td><button onclick="deleteUser({{userID}})">Delete</button></td>
      </tr>
      {{/each}}
    </tbody>

</main>
